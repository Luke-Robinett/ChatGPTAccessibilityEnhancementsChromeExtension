{
    "manifest_version": 3,
    "name": "ChatGPT Accessibility Enhancements",
    "description": "Makes the ChatGPT web interface easier to use with a screen reader.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}